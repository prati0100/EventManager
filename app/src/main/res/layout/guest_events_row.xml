<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/guest_events_row_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:paddingStart="7dp"
        android:paddingEnd="7dp"
        app:layout_constraintTop_toBottomOf="parent" />

    <TextView
        android:id="@+id/guest_events_row_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="7dp"
        android:paddingEnd="7dp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/guest_events_row_name" />

    <TextView
        android:id="@+id/guest_events_row_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="7dp"
        android:paddingEnd="7dp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/guest_events_row_name"
        app:layout_constraintLeft_toRightOf="@id/guest_events_row_time" />

    <TextView
        android:id="@+id/guest_events_row_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="7dp"
        android:paddingEnd="7dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/rounded_corner"
        android:textColor="@color/colorWhite"
        app:layout_constraintTop_toBottomOf="@id/guest_events_row_date"
        app:layout_constraintLeft_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>